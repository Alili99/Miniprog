/* pages/listPage/listPage.wxss */

page {
  background-color: #ffffe0;
  height: 100%;
}

.title {
  position: fixed;
  top: 0px;
  width: 100%;
  height: 100rpx;
  background-color: #f2f2f2;
  display: flex;
  flex-direction: row;
  box-shadow: 0 2px 5px black;
  z-index: 9999;
}

.more {
  padding-top: 25rpx;
}

.backbtn {
  height: 28rpx;
  width: 28rpx;
  padding-left: 30rpx;
}

.timebtn {
  height: 55rpx;
  width: 55rpx;
  padding-left: 410rpx;
}

.pointbtn {
  height: 55rpx;
  width: 15rpx;
  padding-left: 50rpx;
}

.change-time {
  margin-top: 2rpx;
  padding-left: 20rpx;
  font-size: 12px;
  color: #b5b5b5;
  margin-bottom: 100rpx;
}

.line {
  margin-left: 20rpx;
  color: #d1d1d1;
}

.page-head {
  padding: 100rpx 50rpx 800rpx;
  text-align: center;
}

.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}

.page-section {
  width: 100%;
  margin-bottom: 0;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

textarea {
  width: 700rpx;
  padding-top: 160rpx;
  padding-bottom: 80rpx;
  background-color: #ffffe0;
}

.textarea-wrp {
  padding: 0 30rpx;
  background-color: #ffffe0;
}

.UpMediaButton {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.vedio {
  margin: 15rpx auto;
  text-align: center;
  width: 750rpx;
}

