.input-btn {
  width: 610rpx;
  background-color: white;
  margin-top: 20rpx;
  margin-left: 20rpx;
  
  border: 0.2px solid;
  border-radius: 25px;
}

.search{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
   align-items: flex-start;
}

.search-btn{
  width: 40rpx;
  height: 40rpx;
  margin-top: 24rpx;
  margin-left: 30rpx;
  margin-right: 12rpx;
}

.card-break-word {
  word-wrap: break-word;
  max-width: 260rpx;
  font-size: 9px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow: hidden;
}

.c-state1 {
  transform: rotate(0deg) scale(1) translate(75%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(75%, 0%);
}

.c-state2 {
  transform: rotate(0deg) scale(0.8) translate(75%, 0%);
  -webkit-transform: rotate(0deg) scale(0.8) translate(75%, 0%);
}
