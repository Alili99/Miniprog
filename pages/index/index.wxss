/**index.wxss**/
@import "../../common/lib/weui.wxss";

page {
  background-color: #ebeff2;
  height: 100%;
}

.page-top {
  width: 750rpx;
  z-index: 0;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
}

.top {
  padding: 10rpx;
  background-image: url(http://pic.pptbz.com/pptpic/201408/2014082911551907.jpg);
  background-repeat: repeat-y;
  font-size: 20px;
  height: 340rpx;
}
@import '../../wsSearchView-master/wxSearchView/wxSearchView.wxss';
.top .top-title {
  font-family:STFangsong;
  margin-top: 140px;
  margin-bottom: 20px;
  margin-left: 15px;
  font-size: 30px;
}

.card {
  margin-bottom: 40rpx;
  padding: 40rpx 0;
  display: flex;
  background-color: #ffffe0;
  justify-content: center;
  align-items: top;
  text-align: center;
  font-size: 30rpx;
  color: #353535;
  line-height: 2em;
  margin-top: 60rpx;
}

.card-wrp {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.card-item {
  width: 350rpx;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fffde8;
  margin-top: 20rpx;
  margin-left: 19rpx;
  box-shadow: -1px 1px 6px 0px rgba(0, 0, 0, 0.5);
  text-align: center;
}

.input-btn {
  width: 610rpx;
  background-color: white;
  margin-top: 20rpx;
  margin-left: 20rpx;
  border: 0.2px solid;
  border-radius: 25px;
}

.search {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: flex-start;
}

.search-btn {
  width: 40rpx;
  height: 40rpx;
  margin-top: 24rpx;
  margin-left: 30rpx;
  margin-right: 12rpx;
}

.card-break-word {
  word-wrap: break-word;
  max-width: 260rpx;
  font-size: 9px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow: hidden;
}

.c-state1 {
  transform: rotate(0deg) scale(1) translate(75%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(75%, 0%);
}

.c-state2 {
  transform: rotate(0deg) scale(0.8) translate(75%, 0%);
  -webkit-transform: rotate(0deg) scale(0.8) translate(75%, 0%);
}

.add-btn {
  width: 66rpx;
  height: 66rpx;
  position: fixed;
  bottom: 20px;
  right: 25px;
  font-size: 0;
  line-height: 0;
  z-index: 100;
}
