/**index.wxss**/
@import "../../common/lib/weui.wxss";

page {
  background-color: #ebeff2;
  height: 100%;
}

.page-top {
  width: 750rpx;
  z-index: 0;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
}

.top {
  padding: 10rpx;
  background-image: url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1516695877718&di=99233899b10065d10231694a9a48ab92&imgtype=0&src=http%3A%2F%2Fimg03.tooopen.com%2Fimages%2F20130916%2Fsy_41624317639.jpg);
  background-repeat: repeat-y;
  font-size: 20px;
  height: 340rpx;
}
@import '../../wsSearchView-master/wxSearchView/wxSearchView.wxss';

.top .top-title {
  margin-top: 100px;
  margin-bottom: 20px;
  margin-left: 15px;
  font-size: 30px;
}

.card {
  margin-bottom: 40rpx;
  padding: 40rpx 0;
  display: flex;
  background-color: #ffffe0;
  justify-content: center;
  align-items: top;
  text-align: center;
  font-size: 30rpx;
  color: #353535;
  line-height: 2em;
  margin-top: 60rpx;
}

.card-wrp {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.card-item {
  width: 350rpx;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fffde8;
  margin-top: 20rpx;
  margin-left: 19rpx;
  box-shadow: -1px 1px 6px 0px rgba(0, 0, 0, 0.5);
  text-align: center;
}

